{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "alwaysStrict": true,
    "lib": ["ES2021.String"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "strictNullChecks": false,
    "declarationDir": "dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}